<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="Cem DIRMAN">

  <title>CD - Dashboard</title>
  <!-- Bootstrap core CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>

  <!-- Main Content -->
  <div class="container">
    <a href="">Blok Ekle</a>
    <a href="">Blok Sil</a>

    <% postDataList.forEach( (post) => { %>
        <div class="row">            
            <div class="col-lg-3 mx-auto">
                <img class="img-thumbnail" src="<%=post.blogImage%>">
            </div>            
            <div class="col-lg-9 mx-auto">
                <div class="post-preview">
                    <a href="/blogs/<%=post._id%>">
                        <h2 class="post-title">
                            <%=post.blogTitle%>
                        </h2>
                    </a>
                    <p class="post-meta">Posted by Cem DIRMAN</p>
                </div>
            </div>
        </div>
        <%});%>
  </div>
  <hr>

  <!-- Footer -->
  <footer>
    <div class="container">
      <p class="copyright text-muted">Copyright &copy; Cem DIRMAN 2018</p>
    </div>
  </footer>

</body>

</html>
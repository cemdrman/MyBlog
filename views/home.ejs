<%include ./partials/header%>
<!-- Page Header -->
<header class="masthead" style="background-image: url('images/splash.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h2>Cem DIRMAN</h2>
                    <span class="subheading">Nothing is impossible If you just work hard enough</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">

    <% postDataList.forEach( (post) => { %>
        <div class="row">
            <div class="col-lg-3 mx-auto">
                <img class="img-thumbnail" src=<%=post.postImage%> alt="">
            </div>
            <div class="col-lg-9 mx-auto">
                <div class="post-preview">
                    <a href="post.html">
                        <h2 class="post-title">
                            <%=post.postTitle%>
                        </h2>
                        <h3 class="post-subtitle">
                            <%=post.postSubtitle%>
                        </h3>
                    </a>
                    <p class="post-meta">Posted by
                        <a href="#">Start Bootstrap</a>
                        on September 24, 2018</p>
                </div>
            </div>
        </div>
        <%});%>

</div>

<hr>
<% include ./partials/footer%>